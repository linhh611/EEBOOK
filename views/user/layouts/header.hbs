                            </li>
                            <li>
                                <a href="#">The loai 1</a>
                            </li>
                        </ul>
                    
                    </li> --}}
                    <li class="item-nav list-category">
                        <a href="/stories">Thể loại</a>
                        <ul class="sub-nav">
                            {{#categories}}
                            <li>
                                <a href="/stories?q={{this}}">{{this}}</a>
                            </li>
                            {{/categories}}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="hd-box">
            <div class="hd-menu-right">
                <ul class="hd-nav-menu">
                    <li>
                        <div class="wr-search">
                            <form id="form-search">
                                <input class="form-control" style="border-radius: 10px; padding-left: .5rem;" name="q" type="text" placeholder="Tên truyện hoặc thể loại">
                                <button type="button" class="btn-search" id="btn-search">
