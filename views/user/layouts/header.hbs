<style>
    .nav-custom .dropdown-toggle {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .nav-custom .dropdown-toggle .nav-profile-img img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }

    .nav-custom .navbar-dropdown a {
        color: rgb(38, 37, 37);
    }

    .nav-custom .navbar-dropdown a:hover {
        color: #000 !important;
    }

    #dropdown-item-logout {
        cursor: pointer;
    }

    a.logo {
        text-decoration: none;
    }

    a.logo h1 {
        font-size: 3em;
        color: #f7fbb8;
    }

    .item-nav {
        position: relative;
    }

    .sub-nav {
        position: absolute;
        margin: 0;
        width: 500px;
        float: none;
        display: list-item;
        -webkit-box-shadow: 3px 8px 14px -2px rgba(0, 0, 0, 0.75);
        -moz-box-shadow: 3px 8px 14px -2px rgba(0, 0, 0, 0.75);
        box-shadow: 3px 8px 14px -2px rgba(0, 0, 0, 0.75);
        flex-wrap: wrap;
        background: #fff;
        z-index: 1000;
        padding: 10px 0;
    }

    ul {
        list-style-type: none;
    }

    .sub-nav {
        display: flex;
        justify-content: space-around;
        visibility: hidden;
        opacity: 0;
    }

    .sub-nav li {
        width: 120px;
        text-align: center;
    }

    .sub-nav li a {
        color: #000;
    }

    .item-nav:hover>.sub-nav {

        visibility: visible;
        opacity: 1;
    }

    .wr-search {
        position: relative;
        width: 200px;
    }

    .btn-search {
        height: 44px;
        outline: none;
        border: none;
        top: 0.5px;
        right: 2px;
        position: absolute;
        background: transparent;
        padding-top: 2px;
    }

    .btn-search img {
        height: 22px;
        width: 20px;
    }

    .navbar-dropdown.dropdown-menu.open {
        position: absolute;
        float: left;
        display: block;
    }
</style>

<header class="page-hd">
    <div class="container header-ur">
        <div class="hd-box">
            <div class="hd-menu-left">
                <ul class="hd-nav-menu">
                    <li><a href="/" class="logo">
                            <h1>EEBook</h1>
                            {{!-- <img height="100" width="100" src="{{infoWeb.logo}}" alt=""> --}}
                        </a></li>
                    {{!-- <li class="item-nav">
                        <a href="#">Danh mục</a>
                        <ul class="sub-nav">
